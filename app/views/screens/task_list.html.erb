<% tasks = [
  {
    status: '未着手',
    priority: '高',
    content: 'IE11で確認する',
    due_date: '2020/03/30'
  },
  {
    status: '着手中',
    priority: '低',
    content: 'masterをマージする',
    due_date: '2020/04/05'
  },
  {
    status: '完了',
    priority: '中',
    content: 'stgにデプロイする',
    due_date: '2020/03/18'
  }
] %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-11 page">
      <div class="page__header">
        <h1>
          Tasks
        </h1>
      </div>
      <div class="task-list">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>
                内容
              </th>
              <th>
                ステータス
              </th>
              <th>
                優先度
              </th>
              <th>
                終了期限
              </th>
            </tr>
          </thead>
          <tbody>
            <% tasks.each do |task| %>
              <tr>
                <td>
                  <p class="task__content">
                    <%= task[:content] %>
                  </p>
                  <p class="task__description">
                    タスクの説明<br />
                    タスクの説明は省略できます。
                  </p>
                </td>
                <td>
                  <%= task[:status] %>
                </td>
                <td>
                  <%= task[:priority] %>
                </td>
                <td>
                  <%= task[:due_date] %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="task-list-page__form">
        <div class="row justify-content-center">
          <div class="col-lg-6">
            <h2>
              新規タスク
            </h2>
            <form>
              <div class="form-group">
                <label>
                  内容
                </label>
                <input type="text" class="form-control" />
              </div>
              <div class="form-group">
                <label>
                  説明
                </label>
                <textarea class="form-control"></textarea>
              </div>
              <div class="form-group">
                <label>
                  優先度
                </label>
                <div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="priority0">
                    <label class="form-check-label" for="priority0">
                      高
                    </label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="priority1" checked>
                    <label class="form-check-label" for="priority1">
                      中
                    </label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="priority1">
                    <label class="form-check-label" for="priority1">
                      低
                    </label>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label>
                  終了期限
                </label>
                <input class="form-control" type="date" />
              </div>
              <button class="btn btn-success" type="submit">
                追加する
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
