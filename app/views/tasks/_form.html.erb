<%= form_with model: form, scope: :form, url: tasks_path, html: { id: 'js-new-task-form', data: { test: :new_task_form } } do |f| %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :priority %>
    <div>
      <%= f.collection_radio_buttons :priority, f.object.priorities, :to_i, :to_s do |b| %>
        <div class="form-check form-check-inline">
          <%= b.label(class: 'form-check-label') { b.radio_button(class: 'form-check-input') + t(b.text, scope: 'domain.task.priority') } %>
        </div>
      <% end -%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :deadline %>
    <%= f.date_field :deadline, class: 'form-control' %>
  </div>
  <%= f.button t('actions.add'), class: 'btn btn-success' %>
<% end %>
