<tr>
  <td>
    <p class="task__content">
      <%= task.content %>
    </p>
    <p class="task__description">
      <%= simple_format(task.description) %>
    </p>
  </td>
  <td>
    <%=t task.status, scope: 'domain.task.status' %>
  </td>
  <td>
    <%=t task.priority, scope: 'domain.task.priority' %>
  </td>
  <td>
    <%= task.deadline %>
  </td>
</tr>
